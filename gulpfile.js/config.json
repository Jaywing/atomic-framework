{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      },
      "port": 3434,
      "ui": {
        "port": 3435
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "eslint": {
      "src": "javascripts",
      "extensions": ["js"],
      "options": {
        "envs": [
          "browser"
        ],
        "configFile": "src/javascripts/eslintrc.json"
      }
    },

    "js": {
      "src": "javascripts",
      "dest": "/assets/javascripts",
      "destProd": "assets/javascripts",
      "entries": {
        "app": ["babel-polyfill", "./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": ["transform-object-assign"]
      },
      "extractSharedJs": false
    },

    "css": {
      "src": "stylesheets",
      "dest": "assets/stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": true,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "lint": {
        "options": {
          "formatter": "stylish"
        },
        "files": {
          "ignore": [
            "**/vendor/*.scss",
            "**/docs/*.scss"
          ]
        },
        "configFile": "src/stylesheets/lint.yml"
      },
      "extensions": ["sass", "scss", "css"]
    },
    "html": {
      "src": "html",
      "dest": "./",
      "validationDest": "./logs",
      "dataFile": "_data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "njk", "json"],
      "excludeFolders": ["_layouts", "_shared", "_macros", "_data", "_components"]
    },

    "images": {
      "src": "images",
      "dest": "assets/images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "assets/fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "assets/images",
      "extensions": ["svg"]
    },

    "production" : {
      "rev": false
    }
  }
}

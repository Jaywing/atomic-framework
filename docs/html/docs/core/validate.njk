{% set pageid = 'validate' %}
{% set sectionid = 'core' %}

{% extends 'layouts/application.njk' %}

{% block metaTitle %}Validate | Atomic: Core{% endblock %}

{% block content %}

  <h1 class="Article-title">Validate</h1>
  <p class="c-Text--lead">Form validation module</p>

  <p></p>

  <hr>

  <h2 id="section:usage"><a href="#section:usage" class="c-Text--resetLink">Usage</a></h2>



  <h4>c-Demo</h4>
  <div class="c-example">
    <form data-module="Validate">
      <div class="c-form__field">
        <label class="c-form__label" for="name">Name <small>(2 - 12 chars)</small> *</label>
        <input type="text" id="name" name="name" minlength="2" maxlength="12" class="c-form__input" required />
      </div>
      <div class="c-form__field">
        <label class="c-form__label" for="email">Email</label>
        <input type="email" id="email" name="email" class="c-form__input" />
      </div>
      <div class="c-form__field">
        <label class="c-form__label" for="url">URL</label>
        <input type="url" id="url" name="url" class="c-form__input" />
      </div>
      <div class="c-form__field">
        <label class="c-form__label" for="num">Number <small>(1-9)</small></label>
        <input type="number" id="num" name="num" min="1" max="9" class="c-form__input" />
      </div>
      <div class="c-form__field c-form__field--list">
        <label class="c-form__label">You must fill in this field *</label>
        <label><input type="radio" name="radio" id="radio1" required /> Yes</label>
        <label><input type="radio" name="radio" id="radio2" required /> No</label>
      </div>
      <div class="c-form__field">
        <label><input type="checkbox" name="chkbox" id="chk1" value="1" title="This checkbox is required" required /> Checkbox</label>
      </div>
      <div class="c-form__field">
        <label class="c-form__label" for="dob">Your date of birth <small>DD/MM/YYYY</small></label>
        <input type="text" id="dob" name="dob" placeholder="DD/MM/YYYY" pattern="^(((0[1-9]|[12]\d|3[01])\/(0[13578]|1[02])\/((19|[2-9]\d)\d{2}))|((0[1-9]|[12]\d|30)\/(0[13456789]|1[012])\/((19|[2-9]\d)\d{2}))|((0[1-9]|1\d|2[0-8])\/02\/((19|[2-9]\d)\d{2}))|(29\/02\/((1[6-9]|[2-9]\d)(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00))))$" class="c-form__input" />
      </div>

      <button type="submit" class="c-Button">Submit</button>

    </form>
  </div>

{% endblock %}

